<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <Button
                android:id="@+id/btn_ir_tareas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ir Tareas"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.022"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.804" />

            <TextView
                android:id="@+id/tv_nombre_proyecto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Nombre:"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/imgv_num"
                app:layout_constraintStart_toEndOf="@+id/imgv_num"
                app:layout_constraintTop_toTopOf="@+id/imgv_num"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/tv_numero_tareas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="188dp"
                android:text="N. Tareas"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_nombre_proyecto"
                app:layout_constraintStart_toEndOf="@+id/tv_nombre_proyecto"
                app:layout_constraintTop_toTopOf="@+id/tv_nombre_proyecto"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btn_agregar_tarea_proyecto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Agrager Tarea"
                app:layout_constraintBottom_toBottomOf="@+id/btn_ir_tareas"
                app:layout_constraintStart_toEndOf="@+id/btn_ir_tareas"
                app:layout_constraintTop_toTopOf="@+id/btn_ir_tareas"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/imgv_num"
                android:layout_width="43dp"
                android:layout_height="32dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_ir_tareas"
                app:layout_constraintEnd_toEndOf="@+id/btn_ir_tareas"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/btn_ir_tareas"
                app:srcCompat="@drawable/number_img"
                app:tint="#000000" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>