<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActualizarCiudad">

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:text="Capital:"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/input_a_captal_ciudad"
        app:layout_constraintEnd_toStartOf="@+id/input_a_captal_ciudad"
        app:layout_constraintTop_toTopOf="@+id/input_a_captal_ciudad"
        app:layout_constraintVertical_bias="0.652" />

    <EditText
        android:id="@+id/input_a_fecha_ciudad"
        android:layout_width="228dp"
        android:layout_height="55dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Fecha Fundacion"
        android:inputType="datetime|date"
        app:layout_constraintBottom_toTopOf="@+id/input_a_captal_ciudad"
        app:layout_constraintEnd_toEndOf="@+id/input_a_captal_ciudad"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_a_captal_ciudad" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha Fundacion:"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/input_a_fecha_ciudad"
        app:layout_constraintEnd_toEndOf="@+id/textView29"
        app:layout_constraintStart_toStartOf="@+id/textView29"
        app:layout_constraintTop_toTopOf="@+id/input_a_fecha_ciudad"
        app:layout_constraintVertical_bias="0.511" />

    <EditText
        android:id="@+id/input_a_poblacion_ciudad"
        android:layout_width="228dp"
        android:layout_height="55dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Poblacion"
        app:layout_constraintBottom_toTopOf="@+id/input_a_fecha_ciudad"
        app:layout_constraintEnd_toEndOf="@+id/input_a_fecha_ciudad"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_a_fecha_ciudad" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Poblacion:"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/input_a_poblacion_ciudad"
        app:layout_constraintEnd_toEndOf="@+id/textView28"
        app:layout_constraintStart_toStartOf="@+id/textView28"
        app:layout_constraintTop_toTopOf="@+id/input_a_poblacion_ciudad"
        app:layout_constraintVertical_bias="0.571" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="592dp"
        android:text="ACTUALIZAR CIUDAD"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_actualizar_ciudad"
        app:layout_constraintEnd_toEndOf="@+id/btn_actualizar_ciudad"
        app:layout_constraintStart_toStartOf="@+id/btn_actualizar_ciudad" />

    <Button
        android:id="@+id/btn_actualizar_ciudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACTUALIZAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.956" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/input_a_nombre_ciudad"
        app:layout_constraintEnd_toEndOf="@+id/textView27"
        app:layout_constraintStart_toStartOf="@+id/textView27"
        app:layout_constraintTop_toTopOf="@+id/input_a_nombre_ciudad"
        app:layout_constraintVertical_bias="0.428" />

    <EditText
        android:id="@+id/input_a_nombre_ciudad"
        android:layout_width="228dp"
        android:layout_height="55dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Nombre:"
        app:layout_constraintBottom_toTopOf="@+id/input_a_poblacion_ciudad"
        app:layout_constraintEnd_toEndOf="@+id/input_a_poblacion_ciudad"
        app:layout_constraintStart_toStartOf="@+id/input_a_poblacion_ciudad" />

    <CheckBox
        android:id="@+id/input_a_captal_ciudad"
        android:layout_width="228dp"
        android:layout_height="55dp"
        android:layout_marginBottom="160dp"
        android:text="Es la Capital?"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_actualizar_ciudad"
        app:layout_constraintEnd_toEndOf="@+id/btn_actualizar_ciudad"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="@+id/btn_actualizar_ciudad" />

</androidx.constraintlayout.widget.ConstraintLayout>